<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!-- see: https://material.io/components/switches/android#theming-switches -->
    <!--      https://material.io/components/app-bars-top/android#regular-top-app-bar -->
    <style name="Theme.MyOrientation" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="switchStyle">@style/MySwitchStyle</item>
        <item name="radioButtonStyle">@style/MyRadioButtonStyle</item>
        <item name="actionOverflowMenuStyle">@style/MyOptionsMenuStyle</item> <!-- to define the outer layout of the options menu properly -->
        <item name="android:colorBackground">@color/black</item>
        <item name="android:itemBackground">@color/purple_700</item> <!-- background color of option menu items -->
    </style>

    <style name="Theme.MyOrientation.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyOrientation.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
     </style>

    <style name="Theme.MyOrientation.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="MyOptionsMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
    </style>


    <style name="MyTextViewStyle" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/white</item>
     </style>

    <style name="MySwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyRadioButtonStyle" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- to be assigned directly via android:theme="@style/MySpinnerStyle" -->
    <style name="MySpinnerStyle" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>